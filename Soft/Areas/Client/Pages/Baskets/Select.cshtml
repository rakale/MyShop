@page
@using Abc.Aids.Reflection
@using Abc.Data.Shop
@using Abc.Pages.Common.Extensions

@model Abc.Pages.Shop.Client.BasketsClientPage;

@{
    Layout = "_Details";
    string items = "/Shop/BasketItems";
    var basketId = GetMember.Name<BasketItemData>(x => x.BasketId);
    var id = Model.Item.Id;
    var itemsUrl = new Uri($"{items}/Index?handler=index&fixedFilter={basketId}&fixedValue={id}", UriKind.Relative);
}

<partial name="_ShowBasket" />

@section Details {
    @Html.Link(new Abc.Pages.Common.Aids.Link(" | Show items", itemsUrl))
}
